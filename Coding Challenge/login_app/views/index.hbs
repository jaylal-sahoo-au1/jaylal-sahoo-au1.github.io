<body>

    <div class="container">
        <div class="row">
            <div class="offset-md-4 col-md-4">
                <h2>Login</h2>
                <hr>
                

                <p><hr></p>


                <form action="/login" method="POST">
                    <label>
                        Enter your username: <input name="username" id="username" type="text" class="form-control">
                    </label>
                    <label>
                        Enter your password: <input name="pass"  id="pass" type="password" class="form-control">
                    </label>
                    <button type="submit" class="btn btn-info">submit</button>
                </form>

            </div>
        </div>
    </div>

</body>
